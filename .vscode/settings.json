{
  "prettier.enable": false,
  "editor.formatOnSave": true,

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
  },

  "eslint.rules.customizations": [
    { "rule": "*quotes", "severity": "off" },
    { "rule": "*semi", "severity": "off" },
    { "rule": "no-multiple-empty-lines", "severity": "off" },
    { "rule": "no-trailing-spaces", "severity": "off" },
    { "rule": "comma-spacing", "severity": "off" },
    { "rule": "keyword-spacing", "severity": "off" },
    { "rule": "space-before-blocks", "severity": "off" },
    { "rule": "space-infix-ops", "severity": "off" },
    { "rule": "block-spacing", "severity": "off" },
    { "rule": "arrow-spacing", "severity": "off" },
    { "rule": "object-curly-spacing", "severity": "off" },
    { "rule": "array-bracket-spacing", "severity": "off" },
    { "rule": "import/order", "severity": "off" }
  ],

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml",
    "xml",
    "gql",
    "graphql",
    "css",
    "less",
    "scss",
    "pcss",
    "postcss"
  ]
}
